{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-config-prettier",
        "tslint-config-airbnb"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid",
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "printWidth": 120,
                "proseWrap": "always",
                "semi": true,
                "singleQuote": true,
                "tabWidth": 2,
                "trailingComma": "all",
                "useTabs": false
            }
        ],
        "no-console": false,
        "no-boolean-literal-compare": false
    }
}